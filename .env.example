# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USER_IDS=123456789,987654321

# OpenCode Configuration
# Option 1: Multiple instances (JSON array format)
# OPENCODE_INSTANCES=[{"id":"prod","name":"Production","apiUrl":"http://localhost:3000","projectPath":"/path/to/prod","isDefault":true},{"id":"dev","name":"Development","apiUrl":"http://localhost:3001","projectPath":"/path/to/dev"}]

# Option 2: Single instance (backward compatible)
OPENCODE_API_URL=http://localhost:3000
OPENCODE_PROJECT_PATH=/opt/projects

# Storage Configuration
REDIS_URL=redis://localhost:6379
DATABASE_URL=sqlite://./data/bot.db

# Bot Settings
MAX_MESSAGE_LENGTH=4000
MESSAGE_CHUNK_SIZE=3500
RATE_LIMIT_MESSAGES=30
SESSION_TIMEOUT_MS=3600000
ENABLE_FILE_UPLOADS=true
DEBUG_MODE=false

# Webhook Configuration (optional)
# WEBHOOK_URL=https://your-domain.com/webhook
# WEBHOOK_PORT=3001

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/bot.log

# Security Settings
# Comma-separated list of directories where projects can be located
# Users can add paths under these directories via /add_project command
ALLOWED_PROJECT_PATHS=/opt/projects

# DANGER: Enable root access to allow any directory (server-side only)
# When true, bypasses ALLOWED_PROJECT_PATHS restriction
# Cannot be enabled via Telegram - must be set in this file
ENABLE_ROOT_ACCESS=false
